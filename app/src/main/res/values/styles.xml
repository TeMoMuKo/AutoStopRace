<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="GoToLoginButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="AppTheme.NormalStatusBar" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ListItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_standard</item>
    </style>
    <style name="ListItemHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_standard</item>
    </style>
    <style name="ListItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_standard</item>
    </style>

</resources>
