<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/standard_background_color</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Widget.PlaceCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_content_padding_left_right</item>
        <item name="android:paddingRight">@dimen/card_content_padding_left_right</item>
        <item name="android:paddingTop">@dimen/card_content_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/card_content_padding_top_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.NormalStatusBar" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GoToLoginButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GoToResetButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_standard</item>
    </style>

    <style name="ListItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_standard</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner"/>

    <style name="Theme.Translucent.Status" parent="AppTheme.Base"/>

    <style name="ToolbarAutocompleteTextView" parent="AppTheme.Base">
        <item name="android:textColorHint">@color/hint_light_text_standard</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="CardView.FullScreenCardViewLight" parent="CardView.Light">
        <item name="android:layout_marginBottom">@dimen/full_screen_card_margin</item>
        <item name="android:layout_marginTop">@dimen/full_screen_card_margin</item>
        <item name="android:layout_marginLeft">@dimen/full_screen_card_margin</item>
        <item name="android:layout_marginRight">@dimen/full_screen_card_margin</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <!--fixme 24.04.2017 standardize styles naming-->

    <style name="photo_source_bottom_sheet_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_height_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="photo_source_bottom_sheet_item_icon">
        <item name="android:layout_width">@dimen/bottom_sheet_icon_size</item>
        <item name="android:layout_height">@dimen/bottom_sheet_icon_size</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:tint">@color/secondary_text</item>
    </style>

    <style name="photo_source_bottom_sheet_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/bottom_sheet_text_size</item>
    </style>

    <style name="full_screen_dialog" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
