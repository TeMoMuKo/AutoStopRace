<?xml version="1.0" encoding="utf-8"?>
<!--Todo no ripple without theme attr for unknown reason-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding_halved"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/tv_team_id"
        style="@style/ListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="4dp"
        tools:text="687"/>

    <TextView
        android:id="@+id/tv_last_location"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ostatnia lokacja: Wybrzeże Wyspiańskiego 27, Wrocław, Polska"/>

</LinearLayout>
