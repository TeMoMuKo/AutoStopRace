<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--TODO-->
    <ImageView
        android:id="@+id/image_full_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/accent"/>

    <TextView
        android:id="@+id/tv_drawer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_drawer_email"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin_quarter"
        android:text="@string/title_drawer_default"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_full_screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:text="@string/subtitle_drawer_default"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size"/>

</RelativeLayout>